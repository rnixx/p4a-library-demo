<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorBackground">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="hello"
        android:ems="10"
        android:id="@+id/editMessage" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="86dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="99dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="99dp" android:hint="message"/>
    <TextView
        android:text="TextView"
        android:layout_width="250dp"
        android:layout_height="128dp"
        android:id="@+id/txtOutput" android:layout_marginEnd="40dp" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"
        app:layout_constraintHorizontal_bias="0.493" android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/editMessage" android:background="@android:color/white"/>

    <Button
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="144dp"
        android:enabled="false"
        android:onClick="onSend"
        android:text="send"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtOutput" />

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="162dp"
        android:layout_marginEnd="161dp"
        android:onClick="onStart"
        android:text="start python service"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSend"
        app:layout_constraintVertical_bias="0.172" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onStartEchoWorker"
        android:text="start echo worker"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="471dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="onStartSampleWorker"
        android:text="start sample worker"
        app:layout_constraintTop_toBottomOf="@+id/button"
        tools:layout_editor_absoluteX="113dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:onClick="onStartEcho2Worker"
        android:text="echo 2 "
        app:layout_constraintTop_toBottomOf="@+id/button3"
        tools:layout_editor_absoluteX="161dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onStartSampleBoundService"
        android:text="start SampleBoundService"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="642dp" />

</androidx.constraintlayout.widget.ConstraintLayout>